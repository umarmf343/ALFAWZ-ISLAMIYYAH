# AlFawz Qur'an Institute web client environment variables
# Copy this file to `.env.local` and adjust the values for your environment.

# Base URL for the Laravel API. Include the `/api` suffix when using the default route group.
NEXT_PUBLIC_API_BASE=http://localhost:8000/api

# --- Feature flags ---------------------------------------------------------
# Enable offline-first memorization caching features in the UI.
NEXT_PUBLIC_FEATURE_OFFLINE_MEMORIZATION=false
# Gate access to the admin analytics dashboards that hit protected API endpoints.
NEXT_PUBLIC_FEATURE_ADMIN_ANALYTICS=true
# Toggle celebratory animations and confetti across the student experience.
NEXT_PUBLIC_FEATURE_ENABLE_CELEBRATIONS=true

# --- Analytics -------------------------------------------------------------
# Allow analytics scripts to load in production builds.
NEXT_PUBLIC_ENABLE_ANALYTICS=false
# Provider specific identifier (e.g. GA4 Measurement ID, Plausible domain).
NEXT_PUBLIC_ANALYTICS_TOKEN=

# --- Operational toggles ---------------------------------------------------
# Free-form identifier used for cache busting in the service worker.
NEXT_PUBLIC_RELEASE_VERSION=dev
# Show a maintenance banner and disable non-essential mutations when true.
NEXT_PUBLIC_MAINTENANCE_MODE=false
